{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"jsx": "react",
		"outDir": "dist",
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationDir": "types",
		"emitDeclarationOnly": true
	},
	"include": [
		"src/components/**/*.ts",
	],
	"exclude": ["node_modules", "**/*stories", "**/*types"]
}
